#!/bin/sh

# Centos may not have lsb_release installed
if test -e /etc/centos-release || test -e /etc/fedora-release; then
  yum install -y \
    cmake \
    libxcb-devel \
    xcb-util-keysyms-devel \
    xcb-util-wm-devel \
    fontconfig-devel \
    freetype-devel \
    mesa-libEGL-devel \
    harfbuzz-devel \
    ragel
  exit $?
fi

case `lsb_release -ds` in
  Ubuntu*)
    apt-get install -y \
      cmake \
      bsdutils \
      libxcb-icccm4-dev \
      libxcb-ewmh-dev \
      libxcb-keysyms1-dev \
      libfontconfig1-dev \
      libfreetype6-dev \
      libegl1-mesa-dev \
      libharfbuzz-dev \
      ragel
    ;;
  *)
    echo "Please contribute the commands to install the deps"
    echo "For `lsb_release -ds`"
    ;;
esac
