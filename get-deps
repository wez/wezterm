#!/bin/sh

# Centos may not have lsb_release installed
if test -e /etc/centos-release || test -e /etc/fedora-release; then
  yum install -y \
    make \
    gcc \
    g++ \
    gcc-c++ \
    dbus-devel \
    fontconfig-devel \
    openssl-devel \
    python3 \
    libxcb-devel \
    libxkbcommon-devel \
    libxkbcommon-x11-devel \
    wayland-devel \
    mesa-libEGL-devel \
    xcb-util-keysyms-devel \
    xcb-util-wm-devel \
    rpm-build \
    redhat-lsb-core
  exit $?
fi

case `lsb_release -ds` in
  Ubuntu*|Debian*|PureOS*)
    apt-get install -y \
      bsdutils \
      cmake \
      fakeroot \
      libdbus-1-dev \
      libegl1-mesa-dev \
      libssl-dev \
      libfontconfig1-dev \
      libxcb-ewmh-dev \
      libxcb-icccm4-dev \
      libxcb-keysyms1-dev \
      libxcb-shm0-dev \
      libxcb-xkb-dev \
      libxkbcommon-dev \
      libxkbcommon-x11-dev \
      xdg-utils \
      xorg-dev
    ;;
  *)
    echo "Please contribute the commands to install the deps"
    echo "For `lsb_release -ds`"
    ;;
esac
